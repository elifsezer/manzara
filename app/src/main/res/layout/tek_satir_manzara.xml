<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_delete" android:id="@+id/imgSil"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@+id/tvManzaraAciklama"
                app:layout_constraintBottom_toBottomOf="@+id/tvManzaraAciklama"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_make_copy" android:id="@+id/imgKopyala"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@+id/tvManzaraBaslik"/>
        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgManzara"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvManzaraBaslik"
                app:layout_constraintStart_toEndOf="@+id/imgManzara"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/imgKopyala"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvManzaraAciklama"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imgManzara"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/tvManzaraBaslik"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgManzara" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/imgSil"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>